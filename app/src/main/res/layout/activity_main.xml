<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ru.eterekhov.tictactoe.MainActivity">

    <ImageView
        android:id="@+id/imgGrid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:elevation="0dp"
        android:padding="20dp"
        app:srcCompat="@drawable/tictactoe_board" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:columnCount="3"
        android:rowCount="3"
        android:id="@+id/gridLayout">

        <ImageView
            android:id="@+id/imgCell0"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_row="0"
            android:onClick="makeAMove"
            android:tag="0" />

        <ImageView
            android:id="@+id/imgCell1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_row="0"
            android:onClick="makeAMove"
            android:tag="1" />

        <ImageView
            android:id="@+id/imgCell2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="2"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_row="0"
            android:onClick="makeAMove"
            android:tag="2" />

        <ImageView
            android:id="@+id/imgCell3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_row="1"
            android:onClick="makeAMove"
            android:tag="3" />
        <ImageView
            android:id="@+id/imgCell4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_column="1"
            android:layout_row="1"
            android:onClick="makeAMove"
            android:tag="4" />
        <ImageView
            android:id="@+id/imgCell5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_column="2"
            android:layout_row="1"
            android:onClick="makeAMove"
            android:tag="5" />

        <ImageView
            android:id="@+id/imgCell6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_column="0"
            android:layout_row="2"
            android:onClick="makeAMove"
            android:tag="6" />
        <ImageView
            android:id="@+id/imgCell7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_column="1"
            android:layout_row="2"
            android:onClick="makeAMove"
            android:tag="7" />
        <ImageView
            android:id="@+id/imgCell8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_column="2"
            android:layout_row="2"
            android:onClick="makeAMove"
            android:tag="8" />
    </GridLayout>

</RelativeLayout>

